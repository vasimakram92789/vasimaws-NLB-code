    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowStartStopForTaggedInstances",
            "Effect": "Allow",
            "Action": [
                "ec2:StartInstances",
                "ec2:StopInstances"
            ],
            "Resource": "arn:aws:ec2:ap-south-1:123456789012:instance/*",
            "Condition": {
                "StringEquals": {
                    "ec2:ResourceTag/Environment": "Dev"
                }
            }
        },
        {
            "Sid": "DenyStartStopWithoutTag",
            "Effect": "Deny",
            "Action": [
                "ec2:StartInstances",
                "ec2:StopInstances"
            ],
            "Resource": "arn:aws:ec2:ap-south-1:123456789012:instance/*",
            "Condition": {
                "StringNotEquals": {
                    "ec2:ResourceTag/Environment": "Dev"
                }
            }
        }
    ]
